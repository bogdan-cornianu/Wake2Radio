<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioUrlTxt"
        android:singleLine="false" android:maxLines="3"
            android:layout_below="@+id/radioUrlTxtView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Alarm"
            android:id="@+id/setAlarmBtn"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/radioUrlTxt"
        android:layout_centerHorizontal="true" />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Radio URL:"
            android:id="@+id/radioUrlTxtView"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/nextAlarmTxt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Repeat everyday"
            android:id="@+id/repeatAlarmChk"
        android:layout_below="@+id/timePicker"
        android:layout_centerHorizontal="true" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Next Alarm: No alarm set."
            android:id="@+id/nextAlarmTxt"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/repeatAlarmChk"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TimePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timePicker"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:timePickerMode="spinner" />
</RelativeLayout>

